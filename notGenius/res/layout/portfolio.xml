<?xml version="1.0" encoding="utf-8"?>

<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:label="Main Menu"
	android:layout_gravity="fill"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	android:scrollbars="vertical" >

	<LinearLayout
	    android:gravity="center_vertical"
	    android:layout_height="fill_parent"
	    android:layout_width="fill_parent"
	    android:orientation="vertical">
	    
	    <ImageView
	    	android:id="@+id/refresh"
	    	android:layout_height="wrap_content"
	    	android:layout_width="wrap_content"
	    	android:src="@drawable/refresh">
	    </ImageView>
	    
	    <TextView
	    	android:id="@+id/textView1"
	    	android:layout_height="wrap_content"
	    	android:layout_width="wrap_content"
	    	android:text="Bowleven">
	    </TextView>
	     
	    <EditText
	        android:editable="false"
	        android:id="@+id/textBP"
	        android:layout_height="34dp"
	        android:layout_width="fill_parent"
	        android:textSize="16px">
	    </EditText>
	    
	    <TextView 
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:id="@+id/textView2"
	    	android:text="BP Amoco">
	    </TextView>
	    
	    <EditText 
	    	android:textSize="16px"
	    	android:editable="false"
	    	android:layout_width="fill_parent"
	    	android:id="@+id/textHSBC"
	    	android:layout_height="35dp">
	    </EditText>
	    
	    <TextView 
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:id="@+id/textView3"
	    	android:text="Experian">
	    </TextView>
	    
	    <EditText 
	    	android:textSize="16px" 
	    	android:editable="false"
	    	android:layout_width="fill_parent"
	    	android:id="@+id/textEXP"
	    	android:layout_height="35dp">
	    </EditText>
	    
	    <TextView 
	    	android:layout_width="140dp" 
	    	android:layout_height="wrap_content" 
	    	android:id="@+id/textView4" 
	    	android:text="HSBC">
	    </TextView>
	    
	    <EditText 
	    	android:textSize="16px"  
	    	android:editable="false" 
	    	android:layout_width="fill_parent" 
	    	android:id="@+id/textMS" 
	    	android:layout_height="35dp">
	    </EditText>
	    
	    <TextView 
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content" 
	    	android:id="@+id/textView5" 
	    	android:text="Marks &amp; Spencers">
	    </TextView>
	    
	    <EditText 
	    	android:textSize="15px"  
	    	android:editable="false" 
	    	android:layout_width="fill_parent" 
	    	android:id="@+id/textSN"   
	    	android:layout_height="34dp">
	    </EditText>
	    
	    <TextView 
	    	android:layout_height="wrap_content" 
	    	android:id="@+id/textView4" 
	    	android:layout_width="140dp" 
	    	android:text="Smith &amp; Nephew">
	    </TextView>
	    
	    <EditText 
	    	android:textSize="16px"  
	    	android:editable="false" 
	    	android:layout_width="fill_parent" 
	    	android:layout_height="35dp" 
	    	android:id="@+id/textBW">
	    </EditText>
	    
	    <TableRow 
	    	android:layout_width="fill_parent" 
	    	android:id="@+id/tableRow7" 
	    	android:layout_height="39dp">
	    	
	        <TextView 
	        	android:layout_height="wrap_content" 
	        	android:layout_width="wrap_content" 
	        	android:textAppearance="?android:attr/textAppearanceMedium" 
	        	android:id="@+id/textView7" 
	        	android:text="Grand Total">
	        </TextView>
	        
	        <EditText 
	        	android:textSize="15px"  
	        	android:editable="false" 
	        	android:layout_width="105px" 
	        	android:id="@+id/textGT" 
	        	android:layout_height="34dp">
	        </EditText>
	    </TableRow>
			
		<LinearLayout 
		    android:orientation="horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent" android:gravity="center_vertical"
		    android:weightSum="1">	`
		</LinearLayout>
	
	</LinearLayout>
</ScrollView>
