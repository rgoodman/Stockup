<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:gravity="center_vertical"
    >
	<ImageView android:id="@+id/img" android:src="@drawable/portfolioworthpounds"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:paddingLeft="4dip"
		android_paddingRight="4dip" />
	<ImageView android:id="@+id/img" android:src="@drawable/comparison"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:paddingLeft="4dip"
		android_paddingRight="4dip" />
		
<LinearLayout 
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:gravity="center_vertical"
    >
	<ImageView android:id="@+id/portfolio" android:src="@drawable/portfolio"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:paddingLeft="4dip"
		android_paddingRight="4dip" />
	<ImageView android:id="@+id/shares" android:src="@drawable/shares"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:paddingLeft="4dip"
		android_paddingRight="4dip" />
		</LinearLayout>
</LinearLayout>
